#!/usr/bin/env bash

source "`dirname $0`/../../.env"

## for our tests, I really don't want to have xdebug running all the time (need to come up with a better way to do this)
docker exec -it "$DOCKER_CONTAINER_PREFIX"-php-fpm mv /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini.disabled
docker exec -it "$DOCKER_CONTAINER_PREFIX"-php-fpm vendor/bin/phpunit "$@"
docker exec -it "$DOCKER_CONTAINER_PREFIX"-php-fpm mv /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini.disabled /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini

{
    "name": "aaronsaray/laravel-boot",
    "description": "Laravel Framework and Tools",
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^7.1.3",
        "fideloper/proxy": "^4.0",
        "laravel/framework": "5.7.*"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^2.5",
        "beyondcode/laravel-dump-server": "^1.0",
        "doctrine/dbal": "^2.8",
        "filp/whoops": "^2.0",
        "fzaninotto/faker": "^1.4",
        "laravel/tinker": "^1.0",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^2.0",
        "nunomaduro/larastan": "^0.3.4",
        "phploc/phploc": "^4.0",
        "phpunit/phpunit": "^7.0",
        "roave/security-advisories": "dev-master",
        "sebastian/phpcpd": "^4.1",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
            ]
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "git init",
            "git add --all"
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ],
        "test": [
            "@php vendor/bin/phpunit --colors=always"
        ],
        "test-coverage": [
            "@php vendor/bin/phpunit --colors=always --coverage-html=tests/html-coverage"
        ],
        "ide-helper-update": [
            "@php artisan clear-compiled",
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:meta",
            "@php artisan ide-helper:models --write"
        ],
        "phpdoc": [
            "docker run --rm -v $(pwd):/data phpdoc/phpdoc"
        ],
        "phploc": [
            "@php vendor/bin/phploc app bootstrap config database routes tests > docs/phploc.txt"
        ],
        "phpcpd": [
            "@php vendor/bin/phpcpd app bootstrap config database routes test"
        ],
        "phpcs": [
            "@php vendor/bin/phpcs --standard=PSR12 --colors -p --ignore=tests/html-coverage,bootstrap/cache app bootstrap config database/factories routes tests"
        ]
    },
    "scripts-descriptions": {
        "test": "Run all PHPUnit tests.",
        "test-coverage": "Run all PHPUnit tests, put HTML coverage in tests/html-coverage",
        "ide-helper-update": "Runs the ide-helper generate, meta and models command",
        "phpdoc": "Runs phpDocumentor phpdoc generation and puts it in docs/phpdoc",
        "phploc": "Runs phploc and puts output in docs/phploc.txt",
        "phpcs": "Runs phpcs with PSR12 on app and tests folder"
    },
    "suggest": {
        "zircote/swagger-php": "For creating OpenAPI documentation from annotations in PHP code",
        "spatie/laravel-cors": "For adding CORS support to API"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
